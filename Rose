    <!-- L√ìGICA JAVASCRIPT PARA NAVEGA√á√ÉO E INTERA√á√ÉO -->
    <script>
        // Estado inicial do aplicativo
        let appState = {
            currentPage: 'home'
        };

        const pages = ['home', 'sobre', 'servicos', 'depoimentos', 'contato'];
        const mainContent = document.getElementById('main-content');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuButton = document.getElementById('menu-button');

        /**
         * Alterna a visibilidade do menu mobile.
         */
        menuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
        
        /**
         * Lida com a navega√ß√£o entre as p√°ginas (SPA).
         * @param {string} pageId - O ID da p√°gina a ser exibida.
         */
        function navigate(pageId) {
            if (appState.currentPage === pageId) return;

            // 1. Oculta a p√°gina atual com anima√ß√£o
            const currentPageElement = document.getElementById(`page-${appState.currentPage}`);
            if (currentPageElement) {
                currentPageElement.classList.remove('active');
                currentPageElement.classList.add('hidden');
            }

            // 2. Atualiza o estado
            appState.currentPage = pageId;

            // 3. Mostra a nova p√°gina com anima√ß√£o
            const nextPageElement = document.getElementById(`page-${pageId}`);
            if (nextPageElement) {
                nextPageElement.classList.remove('hidden');
                // For√ßa o reflow para garantir que a anima√ß√£o CSS funcione
                void nextPageElement.offsetWidth; 
                nextPageElement.classList.add('active');
            }

            // 4. Fecha o menu mobile, se estiver aberto
            if (!mobileMenu.classList.contains('hidden')) {
                mobileMenu.classList.add('hidden');
            }

            // 5. Scrolla para o topo
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        /**
         * Adiciona listeners de clique a todos os links de navega√ß√£o
         */
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const pageId = link.getAttribute('data-page');
                navigate(pageId);
            });
        });

        /**
         * Lida com o envio do formul√°rio de contato.
         * @param {Event} e - O evento de envio do formul√°rio.
         */
        function handleContact(e) {
            e.preventDefault();
            const form = e.target;
            const messageElement = document.getElementById('contact-message');
            
            // Simula√ß√£o de envio
            messageElement.textContent = 'Mensagem enviada com sucesso! Rosmari Jorge entrar√° em contato em breve.';
            messageElement.classList.remove('hidden');
            messageElement.classList.add('text-green-600');
            form.reset();

            // Oculta a mensagem ap√≥s 5 segundos
            setTimeout(() => {
                messageElement.classList.add('hidden');
            }, 5000);
        }

        // Inicializa a navega√ß√£o na p√°gina inicial (garante que apenas a home est√° ativa)
        window.onload = () => {
             pages.forEach(id => {
                const element = document.getElementById(`page-${id}`);
                if (element) {
                    if (id === 'home') {
                         element.classList.add('active');
                         element.classList.remove('hidden');
                    } else {
                        element.classList.remove('active');
                        element.classList.add('hidden');
                    }
                }
            });
        };
    </script>
</body>
</html>

